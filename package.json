{
  "name": "yarn-template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "bitomic",
  "license": "MIT",
  "private": true,
  "scripts": {
    "hooks": "husky install .github/husky",
    "build": "rimraf tsconfig.tsbuildinfo dist && yarn tsc --listEmittedFiles --incremental",
    "build:watch": "yarn tsc -w --incremental",
    "lint": "eslint src/ --ext .ts --cache",
    "lint:fix": "eslint src/ --fix --ext .ts --cache",
    "start": "yarn node dist/main.js"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "@bitomic/eslint-config": "^1.2.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^16.11.59",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.34.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@bitomic/logger": "^1.0.0",
    "@bitomic/utilities": "^1.0.0",
    "@bitomic/wikiactivity-api": "1.2.0",
    "@sapphire/async-queue": "^1.3.2",
    "@sapphire/pieces": "^3.3.5",
    "@sapphire/utilities": "^3.7.0",
    "bullmq": "^1.90.0",
    "ioredis": "5.2.2",
    "mw.js": "^2.4.1",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "ts-dotenv": "^0.8.3",
    "undici": "^5.9.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
