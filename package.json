{
  "name": "yarn-template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "bitomic",
  "license": "MIT",
  "private": true,
  "scripts": {
    "hooks": "husky install .github/husky",
    "build": "rimraf tsconfig.tsbuildinfo dist && yarn tsc --listEmittedFiles --incremental",
    "build:watch": "yarn tsc -w --incremental",
    "lint": "eslint src/ --ext .ts --cache",
    "lint:fix": "eslint src/ --fix --ext .ts --cache",
    "start": "yarn node dist/main.js"
  },
  "packageManager": "yarn@3.2.2",
  "devDependencies": {
    "@bitomic/eslint-config": "^1.0.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^16.11.49",
    "@types/node-cron": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@bitomic/utilities": "^1.0.0",
    "@bitomic/wikiactivity-api": "1.1.3",
    "@sapphire/async-queue": "^1.3.2",
    "@sapphire/pieces": "^3.3.5",
    "@sapphire/utilities": "^3.7.0",
    "colorette": "^2.0.19",
    "mw.js": "^2.4.1",
    "node-cron": "^3.0.2",
    "pino": "^8.4.1",
    "pino-pretty": "^8.1.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "ts-dotenv": "^0.8.3",
    "undici": "^5.9.1",
    "uuid": "^8.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
