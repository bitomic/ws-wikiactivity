{
  "name": "yarn-template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "author": "bitomic",
  "license": "MIT",
  "private": true,
  "scripts": {
    "hooks": "husky install .github/husky",
    "build": "rimraf tsconfig.tsbuildinfo dist && yarn tsc --listEmittedFiles --incremental",
    "build:watch": "yarn tsc -w --incremental",
    "lint": "eslint src/ --ext .ts --cache",
    "lint:fix": "eslint src/ --fix --ext .ts --cache",
    "start": "yarn node --enable-source-maps dist/main.js"
  },
  "packageManager": "yarn@3.4.1",
  "devDependencies": {
    "@bitomic/eslint-config": "^1.2.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@bitomic/logger": "^1.0.0",
    "@bitomic/utilities": "^1.0.0",
    "@bitomic/wikiactivity-api": "1.2.0",
    "@sapphire/async-queue": "^1.5.0",
    "@sapphire/pieces": "^3.6.0",
    "@sapphire/utilities": "^3.11.0",
    "bullmq": "^2.4.0",
    "ioredis": "5.2.2",
    "mw.js": "^2.4.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "ts-dotenv": "^0.9.1",
    "undici": "^5.20.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
